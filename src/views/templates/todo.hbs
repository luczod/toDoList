<div class="todo-container">
  <header>
    <h1>Lista de Tarefas</h1>
    <h3>&#40;{{name}}&#41;</h3>
  </header>
  <form id="todo-form">
    <p>Adicione sua tarefa</p>
    <div class="form-add">
      <input id="edit-id" type="hidden">
      <input type="text" id="todo-input" placeholder="O que vocÃª vai fazer?" />
      <button type="submit">
        <i class="fa-thin fa-plus"></i>
      </button>
    </div>
  </form>
  <form id="edit-form" class="hide">
    <p>Edite sua tarefa</p>
    <div class="form-control">
      <input type="text" id="edit-input" />
      <button type="submit">
        <i class="fa-solid fa-check-double"></i>
      </button>
    </div>
    <button id="cancel-edit-btn">Cancelar</button>
  </form>
  <div id="toolbar">
    <div id="search">
      <h4>Pesquisar:</h4>
      <form class="form-search">
        <input type="text" id="search-input" placeholder="Buscar..." />
        <button id="erase-button">
          <i class="fa-solid fa-delete-left"></i>
        </button>
      </form>
    </div>
    <div id="filter">
      <h4>Filtrar:</h4>
      <select id="filter-select">
        <option value="all">Todos</option>
        <option value="done">Feitos</option>
        <option value="todo">A fazer</option>
      </select>
    </div>
  </div>
  <div id="todo-list" data-content="{{userContent}}">
    {{#each userTasks}}
    {{#if this.completed }}
    <div class="todo done" data-id="{{this.id}}">
      <h3>{{this.title}}</h3>
      <button class="finish-todo"><i class="fa-solid fa-check"></i></button>
      <button class="edit-todo" data-edit="{{this.id}}"><i class="fa-solid fa-pen"></i></button>
      <button class="remove-todo"><i class="fa-solid fa-xmark"></i></button>
    </div>
    {{else}}
    <div class="todo" data-id="{{this.id}}">
      <h3>{{this.title}}</h3>
      <button class="finish-todo"><i class="fa-solid fa-check"></i></button>
      <button class="edit-todo" data-edit="{{this.id}}"><i class="fa-solid fa-pen"></i></button>
      <button class="remove-todo"><i class="fa-solid fa-xmark"></i></button>
    </div>
    {{/if}}
    {{/each}}
  </div>
</div>
<script src="assets/js/todoScripts.js" defer nonce="{{nonce}}"></script>